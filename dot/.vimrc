set textwidth=120
" operation >> is +4 << -4 columns
set shiftwidth=4  
" hard tab displays as 4 columns
set tabstop=4 
" tab becomes spaces
set expandtab 
" insert/delete 4 spaces when hitting tab/backspace
set softtabstop=4 
" round indent to multiple of shiftwidth
set shiftround 
set autoindent
set path+=**
